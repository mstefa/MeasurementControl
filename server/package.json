{
  "name": "simple_api_template",
  "version": "1.0.0",
  "description": "Template for building small api services",
  "main": "index.js",
  "keywords": [
    "template",
    "api",
    "backend"
  ],
  "author": "Matias J Stefanutti",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index",
    "dev": "nodemon index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test jest",
    "test:integration": "NODE_ENV=test cucumber-js -p backend",
    "build:clean": "npm run clean && npm run build",
    "build": "tsc -p tsconfig.json ",
    "clean": "rm -r dist; exit 0",
    "lint": "eslint --ext .ts ./src ./tests",
    "lint-fix": "eslint --ext .ts ./src ./tests --fix"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.14.2",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "mongodb": "^5.8.1",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "uuid-validate": "^0.0.3",
    "winston": "^3.10.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.4.0",
    "@faker-js/faker": "^8.0.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/uuid": "^9.0.2",
    "@types/uuid-validate": "^0.0.1",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.51.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.6.3",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0"
  }
}
